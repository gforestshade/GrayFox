<p>Hello, <%= @login_user.name %>.</p>
<p><a href=/rooms/create>Create Room</a></p>

<div style="margin: 5em"></div>

<% if @room_groups[:participating] %>
  <h3>参加中</h3>
  <% @room_groups[:participating].each do |room| %>
  <div class="room-card">
    <p><a href="/rooms/0/<%= room.hash_text %>">
      <%= room.name %>
    </a></p>
    <p><%= room.occupied %> writers</p>
  </div>
  <% end %>
<% end %>

