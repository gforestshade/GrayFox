<html>
<head>
<style>
.name-me {
  color: red;
}
</style>
</head>

<body>
<h1>Room Lobby</h1>
<h2 id="room-title" data-next-phase="0" data-hash="<%= @room.hash_text %>"><%= @room.name %></h2>

<h3>users:</h3>
<ul id="list-users">
</ul>


<% if @is_in then %>
<p><a href="/rooms/0/<%= @room.hash_text %>/leave">Leave</a></p>
<% else %>
<p><a href="/rooms/0/<%= @room.hash_text %>/join">Join</a></p>
<% end %>

<% if @is_host then %>
<p><a href="/rooms/b/<%= @room.hash_text %>">Go!</a></p>
<% end %>

<script type="text/javascript" src="/room_lobby.js"></script>
</body>
