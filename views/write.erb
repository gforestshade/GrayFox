<body>
  <style>
    #write {
    width: 100%;
    height: 40em;
    padding: 0.5em;
    box-sizing: border-box;
    border: 1px solid #bfced3;
    border-radius: 4px;
    line-height: 1.3em;
    font-size: 12pt;
    }
  </style>

  <h2>執筆中</h2>
  <p id="remaining-time" data-expire="<%= @expire %>"></p>
  <textarea id="write"></textarea>
  <button data-href="<%= "/rooms/#{@room.phase+1}/#{@room.hash_text}" %>" onclick="goto(this.dataset.href)">OK</button>

  <div id="data" data-custom-token="<%= @custom_token %>"></div>
  <%= render :erb, :firebase_js %>
  <script src="/agh.sprintf.min.js"></script>
  <script src="/show-remaining-time.js"></script>
  <script src="/write.js"></script>
</body>
